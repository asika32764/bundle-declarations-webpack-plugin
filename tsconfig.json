{
    "include": [
        "src/**/*.*"
    ],
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES5",
            "ES6",
            "ESNext"
        ],
        "baseUrl": "./src/",
        "rootDir": "./src/",
        "outDir": "./lib/",
        "jsx": "react",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "Node"
    }
}